APP_NAME="Elevadores SaaS"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=America/Sao_Paulo
APP_LOCALE=pt_BR

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ─────────────────────────────────────────
# BANCO DE DADOS — PostgreSQL 16
# ─────────────────────────────────────────
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=elevadores
DB_USERNAME=elevadores
DB_PASSWORD=secret

# ─────────────────────────────────────────
# REDIS
# ─────────────────────────────────────────
REDIS_HOST=redis
REDIS_PASSWORD=secret
REDIS_PORT=6379

# ─────────────────────────────────────────
# FILAS — Laravel Queue
# ─────────────────────────────────────────
QUEUE_CONNECTION=redis
HORIZON_PREFIX=elevadores_

# ─────────────────────────────────────────
# SESSÃO E CACHE
# ─────────────────────────────────────────
SESSION_DRIVER=redis
SESSION_LIFETIME=480
CACHE_STORE=redis

# ─────────────────────────────────────────
# WEBSOCKET — Laravel Reverb
# ─────────────────────────────────────────
REVERB_APP_ID=elevadores
REVERB_APP_KEY=local-reverb-key
REVERB_APP_SECRET=local-reverb-secret
REVERB_HOST=reverb
REVERB_PORT=8080
REVERB_SCHEME=http

BROADCAST_CONNECTION=reverb

# ─────────────────────────────────────────
# EMAIL
# ─────────────────────────────────────────
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@elevadores.app"
MAIL_FROM_NAME="${APP_NAME}"

# ─────────────────────────────────────────
# SANCTUM — Autenticação SPA
# ─────────────────────────────────────────
SANCTUM_STATEFUL_DOMAINS=localhost:5173,localhost
SESSION_DOMAIN=localhost

# ─────────────────────────────────────────
# MULTI-TENANCY — stancl/tenancy
# ─────────────────────────────────────────
TENANCY_BOOTSTRAP_DATABASE=true

# ─────────────────────────────────────────
# IA — LLM
# ─────────────────────────────────────────
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-haiku-20240307

# ─────────────────────────────────────────
# WHATSAPP — Evolution API
# ─────────────────────────────────────────
EVOLUTION_API_URL=http://evolution:8081
EVOLUTION_API_KEY=

# ─────────────────────────────────────────
# NFS-e — Nuvem Fiscal
# ─────────────────────────────────────────
NUVEM_FISCAL_CLIENT_ID=
NUVEM_FISCAL_CLIENT_SECRET=
NUVEM_FISCAL_SANDBOX=true

# ─────────────────────────────────────────
# SENTRY (Produção)
# ─────────────────────────────────────────
SENTRY_LARAVEL_DSN=
